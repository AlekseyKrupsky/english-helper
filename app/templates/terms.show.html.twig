<h1>{{ term.term }}</h1>

<div>Learned: {{ term.learned ? '+' : '-' }}</div>

<div>
    Translations:
</div>

<div>
    {% for translation in term.russianTranslations %}
        <div>
            <a href="{{ path('showTerm', {id: translation.id, type: translation.type}) }}">{{ translation.term }}</a>

            <form action="{{ path('removeTranslation', {id: term.id, type: term.type, translationType: translation.type, translationId: translation.id}) }}" method="post">
                <input type="submit" value="Delete">
            </form>
        </div>
    {% endfor %}
</div>

<h3>Add translations</h3>

<form action="{{ path('AddTranslations', {id: term.id, type: term.type, translationType: 'ru'}) }}" method="post">
    <div>
        <div class="translation-field-wrapper">
            <input type="text" class="translation-field" name="translations[]" placeholder="Translation">
        </div>

        <button type="button" class="add-translation">Add</button>
    </div>

    <input type="submit" value="Save">
</form>

<div>
    <a href="{{ path('showTerms', {type: term.type, translation: 'ru'}) }}">List terms</a>
</div>

<form action="{{ path('removeTerm', {type: term.type, id: term.id}) }}" method="post">
    <input type="submit" value="Delete">
</form>